@model IEnumerable<Evidence_Exam.Models.Product>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h3>Products</h3>
        <div style="display:flex; justify-content:flex-end" class="mb-1">
            @Html.ActionLink("Create", "Create", "Products", new {}, new {@class="btn btn-primary btn-sm"})
        </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Mfg Date</th>
                        <th>In Stock?</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var p in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/Pictures/@p.Picture" class="img-circle" style="width:40px" />
                            </td>
                            <td>@p.ProductName</td>
                            <td>@p.Price.ToString("0.00")</td>
                            <td>@p.MfgDate.ToString("yyyy-MM-dd")</td>
                            <td>@(p.InStock.Value ? "Yes":"No")</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Products", new {id=p.ProductId }, new { @class = "btn btn-primary btn-sm" })
                                <button type="button" class="btn btn-danger btn-sm del" data-pk="@p.ProductId">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td colspan="5">
                                <h4>Sales</h4>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Seller</th>
                                            <th>Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var s in p.Sales)
                                        {
                                            <tr>
                                                <td>@s.Date.ToString("yyyy-MM-dd")</td>
                                                <td>@s.Seller.SellerName</td>
                                                <td>@s.Quantity</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>  
    </div>
</div>

